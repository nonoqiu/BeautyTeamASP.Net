@model BeautyTeamWeb.Models.VerifyCodeViewModel
@{
    ViewBag.Title = "Verify";
}
@Html.Partial("../Home/_StaticSlider")
<div class="container">
    <h2>@ViewBag.Title.</h2>
    <form class="form-horizontal" role="form" action="/en-US/Account/VerifyCode" method="post" novalidate="novalidate">
        @Html.AntiForgeryToken()
        @Html.Hidden("provider", @Model.Provider)
        @Html.Hidden("rememberMe", @Model.RememberMe)
        <h4>Enter verification code</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="left_contact form-level">
            <input name="Code" class="input-block" id="Code"
                   aria-invalid="false"
                   aria-required="true"
                   aria-describedby="Code-error"
                   type="text" value=""
                   data-val="true"
                   data-val-required="The Code field is required.">
            <span class="form-icon fa fa-code"></span>
        </div>
        <span class="field-validation-valid text-danger" data-valmsg-replace="true" data-valmsg-for="Code"></span>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <div class="checkbox">
                    <input name="RememberBrowser" id="RememberBrowser"
                           type="checkbox"
                           value="true"
                           data-val="true"
                           data-val-required="The Remember this browser? field is required.">
                    <label for="RememberBrowser">Remember Browser?</label>
                </div>
            </div>
        </div>
        <span class="field-validation-valid text-danger" data-valmsg-replace="true" data-valmsg-for="RememberBrowser"></span>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Submit" class="btn btn-main featured" />
            </div>
        </div>
    </form>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
