@model BeautyTeamWeb.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "Reset password";
}
@Html.Partial("../Home/_StaticSlider")
<div class="container">
    <h3>@ViewBag.Title.</h3>
    <form class="form-horizontal col-md-4" role="form" action="@Url.Action("ResetPassword", "Account")" method="post" novalidate="novalidate">
        @Html.AntiForgeryToken()
        <h4>Reset your password.</h4>
        <hr />
        @Html.ValidationSummary(true,"", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Code)
        <div class="left_contact form-level">
            <input name="Email" class="input-block" id="Email" type="text"
                   placeholder="Email"
                   data-val-required="The Email field is required." 
                   data-val-email="The Email field is not a valid e-mail address." 
                   data-val="true">
            <span class="form-icon fa fa-user"></span>
        </div>
        <span class="field-validation-valid text-danger" data-valmsg-replace="true" data-valmsg-for="Email"></span>

        <div class="left_contact form-level">
            <input name="Password" class="input-block" id="Password" type="password" 
                   placeholder="Password"
                   data-val-required="The Password field is required." 
                   data-val="true" 
                   data-val-length-min="6" 
                   data-val-length-max="100" 
                   data-val-length="The Password must be at least 6 characters long.">
            <span class="form-icon fa fa-unlock"></span>
        </div>
        <span class="field-validation-valid text-danger" data-valmsg-replace="true" data-valmsg-for="Password"></span>

        <div class="left_contact form-level">
            <input name="ConfirmPassword" class="input-block" id="ConfirmPassword" type="password" 
                   placeholder="Confirm Password"
                   data-val="true" data-val-equalto-other="*.Password" 
                   data-val-equalto="The password and confirmation password do not match.">
            <span class="form-icon fa fa-lock"></span>
        </div>
        <span class="field-validation-valid text-danger" data-valmsg-replace="true" data-valmsg-for="ConfirmPassword"></span>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Reset" class="btn btn-main featured" />
            </div>
        </div>
    </form>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
