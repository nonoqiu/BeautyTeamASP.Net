@model BeautyTeamWeb.ViewModels.HomeIndexViewModel

@using BeautyTeamWeb.Services
<section id="blog">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="feature_header text-center">
                    <h3 class="feature_title"><b>@Resources.lang.LatestNews</b></h3>
                    <h4 class="feature_sub">Lorem ipsum dolor sit amet, consectetur adipisicing elit. </h4>
                    <div class="divider"></div>
                </div>
            </div>
        </div>
        </div>
        <div class="row">
            <div class="blog-timeline">
                <div id="owl-blog" class="owl-carousel owl-theme">
                    @foreach (var News in Model.Newss)
                    {
                        <div class="item ">
                            <div class="single_blog">
                                <div class="post_img text-center">
                                    <a href="@Url.Action(News.ToAction, News.ToController)">
                                        <img src="@News.ImageURL" alt="" class="img-responsive">
                                    </a>
                                    <div class="post-date">
                                        <span>@News.PublishTime.Day</span> @News.PublishTime.Month
                                    </div>
                                </div>
                                <a href="@Url.Action(News.ToAction, News.ToController)">
                                    <h4>
                                        @News.NewsViewModelName.ToString().Take(60)
                                    </h4>
                                </a>
                                <ul class="list-inline">
                                    <li> <i class="fa fa-pencil"></i> MMA</li>
                                    <li> <i class="fa fa-eye"></i> @News.Views</li>
                                </ul>
                                <p>@News.NewsContent.RemoveHTML().Take(170)</p>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
</section>
