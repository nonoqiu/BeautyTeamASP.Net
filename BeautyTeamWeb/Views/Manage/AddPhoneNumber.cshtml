@model BeautyTeamWeb.Models.AddPhoneNumberViewModel
@{
    ViewBag.Title = "Phone Number";
}
@Html.Partial("../Home/_StaticSliderII")
<div class="container">
    <h3>@ViewBag.Title.</h3>
    <form method="post" action="@Url.Action("AddPhoneNumber","Manage")" class="form-horizontal col-md-5" role="form">
        @Html.AntiForgeryToken()
        <h4>Add a phone number</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="left_contact form-level">
            <input name="Number" class="input-block" id="Number" type="number" value=""
                   placeholder="Phone Number"
                   data-val="true"
                   data-val-required="The Phone Number field is required."
                   data-val-phone="The Phone Number field is not a valid phone number.">
            <span class="form-icon fa fa-phone"></span>
        </div>
        <span class="field-validation-valid text-danger" data-valmsg-replace="true" data-valmsg-for="Number"></span>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Submit" class="btn btn-main featured" />
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
